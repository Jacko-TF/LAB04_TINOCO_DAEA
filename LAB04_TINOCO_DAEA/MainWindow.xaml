<Window x:Class="LAB04_TINOCO_DAEA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB04_TINOCO_DAEA"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="750" Width="750">

            <StackPanel>

                <Button Margin="2" Click="Button_Click" >Listar Productos</Button>

                <ScrollViewer  Width="750" Height="300" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <DataGrid 
                        x:Name="dgProductos" 
                        Margin="2">
                    </DataGrid>
                </ScrollViewer>

            </StackPanel>

            <StackPanel>

                <Button Margin="2" Click="Button_Click_1">Listar Categorias</Button>

                <ScrollViewer  Width="750" Height="300" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <DataGrid 
                        x:Name="dgCategorias" 
                        Margin="2">
                    </DataGrid>
                </ScrollViewer>

            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
